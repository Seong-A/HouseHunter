<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/househunter_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_Emaillayout"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Email_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_gravity="center"
            android:text="이메일"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Email_Edit"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="14dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border"
            android:hint=" 이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_Passlayout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Pass_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:text="비밀번호"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Pass_Edit"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border"
            android:hint=" 비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <android.widget.Button
            android:id="@+id/LoginpBtn"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_background"
            android:text="로그인"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/SignupBtn"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_red_background"
            android:text="회원가입"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <com.navercorp.nid.oauth.view.NidOAuthLoginButton
            android:id="@+id/buttonOAuthLoginImg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:contentDescription="네이버 아이디로 로그인" />

    </LinearLayout>

</LinearLayout>
